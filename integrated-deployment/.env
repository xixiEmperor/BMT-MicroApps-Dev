# BMT羽毛球场馆管理系统 环境变量配置

# 项目基础配置
COMPOSE_PROJECT_NAME=bmt-microapps
PROJECT_DOMAIN=your-domain.com
NODE_ENV=production

# 数据库配置
POSTGRES_DB=bmt_database
POSTGRES_USER=bmt_user
POSTGRES_PASSWORD=your_secure_db_password_here

# Redis配置
REDIS_PASSWORD=your_secure_redis_password_here

# JWT密钥
JWT_SECRET=your_super_secret_jwt_key_here_min_32_chars

# API端口配置
API_PORT=3000
WS_PORT=5000

# WebSocket配置
WS_URL=ws://localhost:5000
WS_HEARTBEAT_INTERVAL=15000
WS_RECONNECT_MAX_ATTEMPTS=5

# 文件上传配置
UPLOAD_MAX_SIZE=100M
UPLOAD_PATH=/app/uploads

# 邮件服务配置 (可选)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@your-domain.com
SMTP_PASSWORD=your_smtp_password

# 微信/支付宝配置 (可选)
WECHAT_APP_ID=your_wechat_app_id
WECHAT_APP_SECRET=your_wechat_app_secret
ALIPAY_APP_ID=your_alipay_app_id

# 监控配置
ENABLE_MONITORING=true
LOG_LEVEL=info

# 安全配置
CORS_ORIGIN=http://localhost,https://your-domain.com
RATE_LIMIT_WINDOW=900000  # 15分钟
RATE_LIMIT_MAX=100        # 每窗口最大请求数
